@page "/counter"

@inject IPythonEnvironment IPythonEnvironment

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p>@message</p>
<p>@message2</p>
<p>@message3</p>

@code {
    private int currentCount = 0;

    private string message = "";

    private string message2 = "";
    
    private string message3 = "";

    private void IncrementCount()
    {
        currentCount++;

        var env = IPythonEnvironment;

        try
        {
            var module = env.Dostuff();

            message = module.HelloWorld("asdf", 23);

            var module2 = env.CreateDb();

            module2.Main();
        }
        catch (Exception ex)
        {
            message2 = $"Error: {ex.Message}";

            message3 = $"Stack Trace: {ex.InnerException}"; 
        }

    }
}
